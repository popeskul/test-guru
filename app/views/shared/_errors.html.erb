<% if resource.present? && resource.errors.any? %>
  <%= content_tag :div, id: 'error_explanation', class: 'resource-errors', data: { resource_id: resource.id } do %>
    <p><%= t('.header', count: resource.errors.count) %>:</p>

    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
