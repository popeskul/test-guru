<%= form_with model: [:admin, @question, @answer], local: true do |form| %>
  <%= render 'shared/errors', resource: @answer %>

  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_area :title, rows: 7, cols: 60, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :correct, class: 'form-check-label' %>
    <%= form.check_box :correct, class: 'form-check-input' %>
  </div>

  <div class="mb-3">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
