<h1><%= t('.header') %>:</h1>

<%= render 'shared/errors', resource: @badge %>

<table class="table table-bordered">
  <thead class="thead">
  <tr>
    <th>
      <%= t('.name') %>
    </th>
    <th><%= t('.badge_type') %></th>
    <th><%= t('.parameter') %></th>
    <th><%= t('.badge_image') %></th>
  </tr>
  </thead>
  <tbody>
  <%= render current_user.badge.order(created_at: :desc) %>
  </tbody>
</table>
